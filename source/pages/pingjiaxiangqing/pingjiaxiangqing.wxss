/* pages/goodspingjia/goodspingjia.wxss */
.listbox {
    width: 750rpx;
    background: #FFFFFF;
    box-shadow: 0rpx 0rpx 18rpx 0rpx rgba(0, 0, 0, 0.08);
    margin-top: 24rpx;
}

.touxiang {
    width: 56rpx;
    height: 56rpx;
    border-radius: 28rpx;
    margin-right: 16rpx;
    background: #D8D8D8;
    box-shadow: 0rpx 0rpx 18rpx 0rpx rgba(0, 0, 0, 0.08);
}

.name {
    font-size: 28rpx;
    color: #333333;
    line-height: 40rpx;
    text-shadow: 0px 0px 18rpx rgba(0, 0, 0, 0.08);
}

.pjtime {
    font-size: 24rpx;
    color: #999999;
    line-height: 34rpx;
    text-shadow: 0px 0px 18rpx rgba(0, 0, 0, 0.08);
}

.pjcontent {
    font-size: 28rpx;
    font-weight: 400;
    color: #666666;
    line-height: 40rpx;
    text-shadow: 0px 0px 18rpx rgba(0, 0, 0, 0.08);
    margin-top: 16rpx;
}

.pjimg {
    width: 100%;
    background: #D8D8D8;
    box-shadow: 0px 0px 18px 0px rgba(0, 0, 0, 0.08);
    border-radius: 8px;
}
.imgs_box{
    display: flex;
    flex-direction: column;
    width: 100%;
    margin-bottom: 15px;
}
.cart_box{
    margin: 0px  10px 10px 10px;
    display: flex;
    background-color:#F6F6F6 ;
    border-radius: 5px;
}
.cart_name{
    width: 154px;
height: 20px;
font-size: 14px;
font-family: PingFangSC-Regular, PingFang SC;
font-weight: 400;
color: #333333;
line-height: 20px;
}
.cart_guige{
    width: 117px;
height: 17px;
font-size: 12px;
font-family: PingFangSC-Regular, PingFang SC;
font-weight: 400;
color: #999999;
line-height: 17px;
}
.cart_right{
    margin-left: 10px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.cart_box_iamge{
    width: 144rpx;
    height: 144rpx;
    border-radius: 10px;
    justify-content: center;
}