
<view class="flex-row flex-center sendbox">
    <view class="{{sendtype=='A'?'sendactive':'txt-44'}} h6" bindtap="swtichsend" id='A'>商家配送</view>
    <view class="{{sendtype=='B'?'sendactive':'txt-44'}} h6" bindtap="swtichsend" id='B'>到店自提</view>
</view>

<view>
    <view class="flex-row flex-center dizhibox">
        <image src="{{uploadpath}}resource/{{res.dizhi}}" class="dizhi"></image>
        <view class="f-36 txt-33">点击选择地址</view>
        <view class="flex-1"></view>
        <image src="{{uploadpath}}resource/{{res.righticon}}" class="righticon"></image>
    </view>

    <view class="goods">
        <image src="{{uploadpath}}mall/{{info.cover}}" class="cover"></image>
        <view class="height-50"></view>
        <view class="flex-row flex-center">
            <view class="h5 txt-33">礼品卡</view>
            <view class="flex-1"></view>
            <view class="h5" style="color:#888888;">未使用</view>
            <image src="{{uploadpath}}resource/{{res.righticon}}" class="righticon"></image>
        </view>
        <view class="height-50"></view>
        <view class="flex-row flex-center">
            <view class="h5 txt-33">优惠券</view>
            <view class="cbox" style="background-image:url({{uploadpath}}resource/{{res.couponbgicon}})">0张可用</view>
            <view class="flex-1"></view>
            <view class="h5" style="color:#888888;">未使用</view>
            <image src="{{uploadpath}}resource/{{res.righticon}}" class="righticon"></image>
        </view>
    </view>
    <view class="height-70"></view>
    <view class="total">
        <view class="flex-row flex-center">
            <view class="h5 txt-33">商品总金额</view>
            <view class="flex-1"></view>
            <view class="h5" style="color:#888888;">¥999.00</view>
        </view>
        <view class="flex-row flex-center margin-top-24">
            <view class="h5 txt-33">运费</view>
            <view class="flex-1"></view>
            <view class="h5 txt-fc " >¥999.00</view>
        </view>
        <view class="flex-row flex-center margin-top-24">
            <view class="h5 txt-33">优惠金额</view>
            <view class="flex-1"></view>
            <view class="h5 txt-fc " >¥999.00</view>
        </view>
        <view class="height-70"></view>
        <view  class="flex-row flex-center ">
            <view class="h5 txt-33">订单备注</view>
            <input type="text" class="flex-1 text-right h5 txt-33" placeholder="请选择备注"/>
        </view>
    </view>
</view>

<view class="flex-row flex-center fixbottom">
    <view class=" h5 txt-33 margin-left-24">实付款:</view>
    <view class="h4 txt-fc txt-bold margin-left-10">¥999.00</view>
    <view class="flex-1"></view>
    <view class="btns">立即支付</view>
</view>