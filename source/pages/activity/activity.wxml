<!--pages/activity/activity.wxml-->
<view style="position: relative;">
    <view class="activeliat">
        <swiper circular="{{true}}">
            <swiper-item wx:for="{{image}}" wx:key='k'>
                <image src="{{uploadpath}}activity/{{item.img}}" class="activeimg" bindtap="tobanner" data-item="{{item}}"></image>
            </swiper-item>
        </swiper>
        <view class="f-36 ">{{data.name}}</view>
        <view class="question padding-top-40">【活动信息】</view>
        <view class="f-28 margin-top-16">活动时间：{{data.starttime}}-{{data.endtime}}</view>
        <view class="f-28 margin-top-16">报名时间：{{data.startbaoming}}-{{data.endbaoming}}</view>
        <view class="f-28 margin-top-16">活动地点：{{data.sddress}}</view>
        <view class="f-28 margin-top-16">费用：{{data.money}}</view>
        <view class="question padding-top-40">【活动内容】</view>
        <view class="padding-top-16" style="color: #474545;">
            <import src="../../wxParse/wxParse.wxml" />
            <template is="wxParse" data="{{wxParseData:content.nodes}}" />
        </view>
        <view class="question padding-top-40">【报名信息填写】</view>
        <view wx:for="{{question}}" wx:key='k'>
            <view class="question padding-top-40 padding-bottom-40">{{item.name}}</view>
            <view class="flex-row" wx:if="{{item.isxuan == '是' && item.options.length != 0}}">
                <input class="answer f-28" type="buttom" bindtap="selected" />
                <image src="{{uploadpath}}resource/{{res.select}}" style="width: 28rpx; height: 28rpx;"></image>
            </view>
            <view wx:else>
                <input class="answer f-28" type="text" />
            </view>
        </view>
        <view class="btns margin-top-60" bindtap="navigateto" id="/pages/activityinfo/activityinfo">报名</view>
    </view>
    <view class="selectbox" style="display: show;">
        <view class="content">
            <view class="" wx:for="{{question}}" wx:key="item">
                <view wx:for="{{item.options}}" wx:for-item="optionsitem" wx:key="{{optionsitem}}">
                  <view class="selectcontent f-34 flex-row flex-column">{{optionsitem.name}}</view>  
                </view>
            </view>
            <view class="disable margin-top-16 padding-top-32 f-34 flex-row flex-column">
            取消
            </view>
        </view>

    </view>
</view>