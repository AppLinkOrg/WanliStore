/* pages/videolist/videolist.wxss */

.pore{
    position: relative;
    margin: 0rpx 24rpx 0rpx 24rpx;
    padding-bottom: 30rpx;
}
.videoimg {
    width: 702rpx;
    height: 396rpx;
}

.title{
    max-width: 548rpx;
    padding: 20rpx;
    background: #fafafa;
    box-shadow: 0 0 24rpx 0 rgba(0,0,0,0.18);
    border-radius: 12rpx;
    position: absolute;
    bottom: 15rpx;
    left: 52rpx;
    z-index: 1;
}

.mask {
    width: 100vw;
    height: 100vh;
    background: #000000;
    opacity: 0.5;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
}
.showvideo {
    width: 100vw;
    position: fixed;
    top: 30%;
    left: 0;
    z-index: 20;
}
